<%- layout("./admin/layouts/layout") %> 
<div class="container">

   <form id="add-product-form" class="validated-form" action="/admin/products" method="POST" autocomplete="off" enctype="multipart/form-data" novalidate>
      <h2>Add New Product</h2>
      <hr>
      <h3>Basic Information</h3>
      <div class="mb-3">
         <label for="product-name">Product Name</label>
         <input class="form-control" type="text" name="name" id="product-name" required>
         <div class="valid-feedback">
            Looks good!
         </div>
      </div>

      <div class="mb-3">
         <label for="product-desc">Product Description</label>
         <textarea class="form-control" name="desc" id="product-desc" cols="30" rows="10"></textarea>
      </div>  
      

      <div class="row align-items-center">
         <div class="container-fluid mb-3">
            <div class="row align-items-center">

               <div class="col-md-6">
                  <label for="product-qty">Quantity:</label>
                  <input class="form-control" type="number" name="qty" id="product-qty" required>
                  <div class="valid-feedback">
                     Looks good!
                  </div>
               </div>
               <div class="col-md-6">
                  <label for="product-qty">Price:</label>
                  <input step="0.01" class="form-control" type="number" name="price" id="product-price" required>
                  <div class="valid-feedback">
                     Looks good!
                  </div>
               </div>
            </div>
            <hr class="divider">
            <div class="row">

               <!-- PHOTO UPLOAD STUFF GOES HERE!!!! -->

               <div class="container">
                  <div class="row">
                     <h3>Media Management</h3>
                     <div class="col-md-4">
                        
                        <input class="form-control" type="file" name="default" id="defaultImg" accept=".jpg, .jpeg, .png" width="36">
                        <label for="defaultImg" class="d-block" id="defaultLabel">
                           <div class="image-prev-container py-3" id="defaultContainer">
                              <p id="image-prev-placeholder">
                                 Select a Thumbnail
                              </p>
                           </div>
                        </label>
                     </div>
                     
                     <div class="col-md-8">
                        <input class="form-control" type="file" name="images" id="images" accept=".jpg, .jpeg, .png" multiple width="36">
                        <label for="images" class="d-block">
                           <div class="image-prev-container py-3" id="list">
                              <p id="image-prev-placeholder">
                                 Select up to 5 images only!
                              </p>
                           </div>
                        </label>
                     </div>
                  </div>
               </div>
            </div>
         </div>
         <button type="submit" class="btn btn-cust btn-lg">Add Product</button>
      </div>
   </form>
</div>

<script src="/js/ckeditor/ckeditor.js"></script>
<script>
   CKEDITOR.replace( 'product-desc' )
</script>
<script src="/js/script.js"></script>